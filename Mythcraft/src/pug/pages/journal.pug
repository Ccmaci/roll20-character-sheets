.grid.gap-6.journal
    .grid.double-border-2.rounded-md.content-start.p-2.relative
        +title('additional background & occupation info')
        +textarea('additional background occupation info')
    .grid.gap-4.grid-flow-col
        .grid.double-border-2.rounded-md.content-start.p-2.repeating-container.relative
            +title('location, requests, & contacts')
            +simpleRepeatingSection('location requests contacts')
        .grid.justify-center.grid-flow-col.gap-4.repeating-container.resources
            fieldset(class="repeating_resource")
                .grid.double-border-2.rounded-md.content-start.p-2
                    h3.text-center(data-i18n='resource')
                    +textInput('name')
                    .grid.gap-2.grid-flow-col
                        +numberInput('current')
                        +numberInput('max')
                .grid
                    h3.text-center(data-i18n='current/max')
    .grid.double-border-2.rounded-md.content-start.p-2.relative.repeating-container
        +title('journal')
        fieldset(class=`repeating_journal`)
            .grid.descriptor.relative.gap-2
                +editFlag()
                .grid.grid-flow-col.gap-4
                    .grid.col-auto-fr.gap-2
                        h3(data-i18n='name')
                        span.display(name=`attr_name`)
                        +textInput('name')
                    .grid.col-auto-fr.gap-2
                        h3(data-i18n='date')
                        span.display(name=`attr_date`)
                        +textInput('date')
                +repeatingChatButton("name")
                .grid.notes
                    span.display.pl-4(name='attr_notes')
                    +textarea('notes')